<UserControl
    x:Class="EquipManager.Presentation.Views.UserControls.PPEContracts.ViewPPEContractView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:EquipManager.Presentation.Views.UserControls.PPEContracts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*" />
            <RowDefinition Height="0.13*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--#region Top-->

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="28"
            Text="Просмотр договора" />

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <RadioButton
                x:Name="EmployeeRadioButton"
                Grid.Column="0"
                Content="{StaticResource t_Employee}"
                IsChecked="True">
                <RadioButton.Style>
                    <Style BasedOn="{StaticResource c_TabMenuRadioButtonStyle}" TargetType="RadioButton">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=PPERadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=PPEContractRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

            <RadioButton
                x:Name="PPERadioButton"
                Grid.Column="1"
                Content="{StaticResource t_PPE}"
                IsChecked="False">
                <RadioButton.Style>
                    <Style BasedOn="{StaticResource c_TabMenuRadioButtonStyle}" TargetType="RadioButton">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=EmployeeRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=PPEContractRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

            <RadioButton
                x:Name="PPEContractRadioButton"
                Grid.Column="2"
                Content="{StaticResource t_Contract}"
                IsChecked="False">
                <RadioButton.Style>
                    <Style BasedOn="{StaticResource c_TabMenuRadioButtonStyle}" TargetType="RadioButton">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=EmployeeRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=PPERadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="IsChecked" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

        </Grid>

        <!--#endregion-->

        <!--#region Employee-->

        <Grid x:Name="EmployeeGrid" Grid.Row="2">

            <ScrollViewer Grid.Row="1" Background="Transparent">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="125" />
                        <RowDefinition Height="300" />
                    </Grid.RowDefinitions>

                    <!--#region Personal Data-->

                    <Grid Grid.Row="0" Margin="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*" />
