                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="{StaticResource t_Company}" />

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="200"
                            Height="40"
                            IsHitTestVisible="False"
                            Tag="{StaticResource t_Employee_StructuralDivision}"
                            Text="{Binding PPEContract.Employee.StructuralDivision}" />

                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Width="200"
                            Height="40"
                            IsHitTestVisible="False"
                            Tag="{StaticResource t_Employee_Profession}"
                            Text="{Binding PPEContract.Employee.Profession}" />

