                            Grid.Column="2"
                            Width="200"
                            Height="40"
                            IsHitTestVisible="False"
                            Tag="{StaticResource t_Employee_DateOfProfessionChange}"
                            Text="{Binding PPEContract.Employee.DateOfProfessionChange, StringFormat=dd/MM/yyyy, ConverterCulture=ru-RU}" />

